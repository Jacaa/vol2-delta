=form_for @sector, url: crag_sectors_path do |f|

  =f.hidden_field :crag_id, value: params[:crag_id]

  =f.label :name, class: 'form-group'
  =f.text_field :name, class: 'form-control'

  =f.label :aspect, class: 'form-group'
  =f.text_field :aspect, class: 'form-control'

  =f.label :latitude, class: 'form-group'
  =f.text_field :latitude, class: 'form-control'

  =f.label :longitude, class: 'form-group'
  =f.text_field :longitude, class: 'form-control'
  %br/
  .form-group
    =f.submit class: 'btn btn-success'
