=form_for @sector do |f|

  =f.label :crag_id, class: 'form-group'
  =f.text_field :crag_id, class: 'form-control'

  =f.label :name, class: 'form-group'
  =f.text_field :name, class: 'form-control'

  =f.label :aspect, class: 'form-group'
  =f.text_field :aspect, class: 'form-control'

  =f.label :x, class: 'form-group'
  =f.text_field :x, class: 'form-control'

  =f.label :y, class: 'form-group'
  =f.text_field :y, class: 'form-control'
  %br/
  .form-group
    =f.submit class: 'btn btn-success'
