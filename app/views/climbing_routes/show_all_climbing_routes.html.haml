%h1 All climbing routes
%table.table.table-striped
  %thead
    %tr
      %td Crag
      %td Sector
      %td Name
      %td Grade
      %td Acents amount
      %td Actions
  %tbody
    - @climbing_routes.each do |climbing_route|
      %tr
        %td= climbing_route.sector.crag.name
        %td= climbing_route.sector.name
        %td= climbing_route.name
        %td= get_route_grade(climbing_route.route_grade_id)
        %td= climbing_route.number_of_ascents
        %td= link_to 'Show', crag_sector_climbing_route_path(climbing_route.sector.crag, climbing_route.sector, climbing_route)
